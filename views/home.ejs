<!DOCTYPE html>
<html lang="en">
<head>
<%- include('./partials/head')  %>
<link rel="stylesheet" href="style.css">
<title>Home</title>
</head>
<body style=" background-color: #4E31AA;">
    <%- include('./partials/navbar')  %>
    <div class="container cc" style=" display: flex; justify-content:space-evenly; flex-wrap: wrap; flex-direction: row;">
    <% if(locals.user){ %>
        <% blogs.forEach(blog => { %>
            <div class="boxx">
                <div style=" display: flex; justify-content: center;" class="boxxi">
              <% if (blog.coverImageUrl) {%>
                <% var stp=blog.coverImageUrl %>
              <%} else{%>
                <% var stp='/compulsory.jpg' %>
                <% } %>
  <img src=<%= stp %> class="imo" alt=<%= blog.coverImageUrl  %>>
</div >
  <div class="card-body" >
    <h4 style="text-align: center; margin-top: 5px;padding: 0px 12px; margin-bottom: 2px;" class="card-title"><%= `${blog.title.substr(0,27)}..`%></h4>
    <p style="text-align: center; padding: 0px 20px;" class="card-text"><%= `${blog.body.substr(0,60)}...`%></p>
    <div style="display: flex; justify-content: center;">
    <a style="background-color: #3A1078; outline: none; color:rgb(235, 227, 227);" href=<%= `/blog/more/${blog.id}`  %> class="btn">Read More</a> 
</div>  
  </div>
</div>
            
     <%   }); %>
    </div>
    <% }else{%>
        <div  style="margin-top: 5vh;">
            <div class="alert alert-danger alert-dismissible fade show container" role="alert">  
              Please Login to access the content.
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
          </div>
    <% } %>
    <%- include('./partials/scripts')  %>
</body>
</html>